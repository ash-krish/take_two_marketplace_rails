<h1>All clothing</h1>
<br>
<% if user_signed_in? %>
<%= link_to 'Create your listing', new_product_path %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <%# <th>Description</th> %>
      <%# <th>Colour</th> %>
      <th>Size</th>
      <%# <th>Condition</th> %>
      <th>Location</th>
      <th>Price</th>
      <br><br>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <%# <td><%= product.description</td>   %>
        <%# <td><%= product.colour</td>  %>
        <td><%= product.size %></td>
        <%# <td><%= product.condition</td>  %>
        <td><%= product.location %></td>
        <td><%= product.price %></td>
        <td><%= image_tag product_image_url(product) %></td>
        <td><%= link_to 'View more details', product %></td>
        <% if user_signed_in? && product.user_id == current_user.id %>
        <td><%= link_to 'Edit listing', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
   
  </tbody>
</table>

